<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChessBoom.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ChessBoom.Views.MainWindow"
        Icon="/Assets/ChessBoom-Logo1.png"
        Title="ChessBoom">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
     
    <StackPanel  
                VerticalAlignment="Center"
                Spacing = "20"> 

        <!-- TODO Icon-->

        <!-- Welcome Message -->
        <TextBlock Text="{Binding Greeting}" 
                HorizontalAlignment="Center"/>

        <!--Button Selection-->
        <Grid ColumnDefinitions="Auto, Auto, Auto" HorizontalAlignment="Center">

            <Button Content ="Game Analysis"
                Grid.Column="0"
                Command="{Binding OnClickGameAnalysis}"/>

            <Button Content ="Variant Game Analysis"
                Grid.Column="1"
                Command="{Binding OnClickVariantGameAnalysis}"/>

            <Button Content ="Tutorials"
                Grid.Column="2"
                Command="{Binding OnClickTutorials}"/>

        </Grid>
                        
        
    </StackPanel>

</Window>
