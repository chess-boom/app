<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:ChessBoom.ViewModels"
             x:Class="ChessBoom.Views.HordeView"
             x:DataType="viewModels:HordeViewModel">
    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <viewModels:HordeViewModel />
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Horde Board" FontSize="50" HorizontalAlignment="Center" />
        <Grid Name="ChessBoard" HorizontalAlignment="Center" PointerPressed="ChessBoard_MouseLeftButtonDown" Focusable="True"/>
    </StackPanel>
</UserControl>