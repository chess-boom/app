<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:ChessBoom.ViewModels"
             x:Class="ChessBoom.Views.BoardView"
             x:DataType="viewModels:BoardViewModel">
    <Design.DataContext>
        <!-- ReSharper disable once Xaml.ConstructorWarning -->
        <viewModels:BoardViewModel />
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Board" FontSize="50" HorizontalAlignment="Center" />
        <Grid Name="ChessBoard" HorizontalAlignment="Center">
            <Svg Path="Assets/Pieces/P.svg" Grid.Row="0" Grid.Column="0" Width="50" Height="50" ZIndex="2" />
        </Grid>
    </StackPanel>
</UserControl>
